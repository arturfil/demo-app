<section class="your-goals">

  <h3>Enter Your Stats</h3>

<div class="container">
  <div class="form-goals">

    <form class="" action="/users" method="post">

      <label for="full-name-input">Fullname</label>
      <br>
      <input id="full-name-input" type="text" name="userName" value="" placeholder="Pepe Soplar">
      <br>

      <label for="weight-input">Weight</label>
      <br>
      <input id="weight-input" type="number" name="userWeight" value="" placeholder="150 lbs">
      <br>

      <label for="age-input">Age</label>
      <br>
      <input id="age-input" type="number" name="userAge" value="" placeholder=" 35">
      <br>

      <label for="gender-input">Gender</label>
      <br>
      <input id="gender-input" type="text" name="userGender" value="" placeholder="Male/Female">
      <br>

      <label for="activity-level-input">Activity Level</label>
      <br>
      <input id="activity-level-input" type="text" name="userActivityLevel" value="" placeholder="Medium">
      <br>

      <label for="goal-input">Goal</label>
      <br>
      <input id="goal-input" type="text" name="userGoal" value="" placeholder="Increase Mass">
      <br>

      <button>Submit</button>

    </form>

  </div>
</div>

</section>
